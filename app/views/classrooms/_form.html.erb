<% if @classroom.errors.any? %>

  <% @classroom.errors.full_messages.each do |msg| %>
    <div class="row">
      <div class="span12">
        <div class="alert alert-error">
          <a class="close" data-dismiss="alert">&times;</a>
          <strong>Error: </strong><%= msg %>
        </div>
      </div>
    </div>
  <% end %>

<% end %>

<%= form_for @classroom, :html => { :class => "form-horizontal well"} do |f| %>
  <fieldset>
    <legend>Classroom</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :grade, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :grade, :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :teacher_id, :class => 'control-label' %>
      <div class="controls">
       <%= f.select :teacher_id, Teacher.where(:school_id => current_admin.school.id).collect {|t| [(t.name), t.id]} %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "Save Changes", :class => 'btn btn-warning btn-large' %>
      <%= link_to 'Cancel', classrooms_path, :class => 'btn btn-primary btn-large' %>
    </div>

  </fieldset>

<% end %>


