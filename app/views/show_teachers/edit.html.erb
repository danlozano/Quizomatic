<%= render 'admin_dashboard/admin_masthead' %>

  <% if @teacher.errors.any? %>

    <% @teacher.errors.full_messages.each do |msg| %>
      <div class="row">
        <div class="span12">
          <div class="alert alert-error">
            <a class="close" data-dismiss="alert">&times;</a>
            <strong>Error: </strong><%= msg %>
          </div>
        </div>
      </div>
    <% end %>

  <% end %>

  <div class="row">
    <div class="span12">

      <%= form_for @teacher, :url => {:action =>'update'}, :html => { :class => "form-horizontal well"} do |f| %>
        <fieldset>
          <legend>Edit Teacher</legend>

          <div class="control-group">
            <%= f.label :email, :class => 'control-label' %>
            <div class="controls">
              <%= f.email_field :email, :autofocus => true, :class => 'input-xlarge' %>
            </div>
          </div>

          <div  class="control-group">
            <%= f.label :name, :class => 'control-label' %>
            <div class="controls">
              <%= f.text_field :name, :class => 'input-xlarge' %>
            </div>
          </div>

          <%= f.hidden_field :password, :value => "password" %>
          <%= f.hidden_field :password_confirmation, :value => "password" %>

          <div class="form-actions">
            <%= f.submit "Save Changes", :class => 'btn btn-warning btn-large' %>
            <%= link_to 'Cancel', show_teachers_path, :class => 'btn btn-primary btn-large' %>
          </div>

        </fieldset>
      <% end %>
      

    </div>
  </div>

</div>
