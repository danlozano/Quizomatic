<%= render 'admin_dashboard/admin_masthead' %>

  <div class="row">
    <div class="span12">

      <h1>Teachers</h1>
      <table class="table table-bordered table-striped table-hover">
        <tr>
          <th>Name</th>
          <th>E-Mail</th>
          <th>Classroom</th>
          <th>Grade</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>

        <% @teachers.each do |teacher| %>
          <tr>
            <td><%= teacher.name %></td>
            <td><%= teacher.email %></td>
            <td>
              <% if teacher.classroom %>
                <%= teacher.classroom.name %>
              <% end %>
            </td>
            <td>
              <% if teacher.classroom %>
                <%= teacher.classroom.grade %>
              <% end %>
            </td>
            <td><%= button_to 'Show', show_teacher_path(teacher), :method => 'get', :class => 'btn btn-info' %></td>
            <td><%= button_to 'Edit', edit_show_teacher_path(teacher), :method => 'get', :class => 'btn btn-warning' %></td>
            <td><a href="#destroyModal" role="button" class="btn btn-danger destroy-button-one" data-toggle="modal" data-resource="show_teachers" data-id=<%= teacher.id %> >Destroy</a></td>
          </tr>
        <% end %>

      </table>

      <br />

      <%= button_to 'New Teacher', new_show_teacher_path, :method => 'get', :class => 'btn btn-primary btn-large' %>

      <!-- Destroy Confirm Modal -->
      <div id="destroyModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 id="myModalLabel">Destroy?</h3>
        </div>
        <div class="modal-body">
          Are you sure you want to destroy this teacher?
        </div>
        <div class="modal-footer">
          <button class="btn btn-warning" data-dismiss="modal" aria-hidden="true">Cancel</button>
          <a href="" class="btn btn-danger destroy-button-two" data-method="delete">Destroy</a>
        </div>
      </div>

    </div>
  </div>

</div>
