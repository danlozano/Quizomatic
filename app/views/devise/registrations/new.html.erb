<div class="container">
 
  <div class="row">
    <div class="span12">

      <%= form_for resource.with_school, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal well"} do |f| %>
        <%= devise_error_messages! %>
        <fieldset>

          <legend>Sign Up</legend>

          <div class="control-group">
            <%= f.label :email, :class => 'control-label' %>
            <div class="controls">
             <%= f.email_field :email, :autofocus => true, :class => 'input-xlarge' %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :name, :class => 'control-label' %>
            <div class="controls">
              <%= f.text_field :name, :class => 'input-xlarge' %>
            </div>
          </div>

          <div class="control-group" class="control-group">
            <%= f.label :password, :class => 'control-label' %>
            <div class="controls">
              <%= f.password_field :password, :class => 'input-xlarge' %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :password_confirmation, :class => 'control-label' %>
            <div class="controls">
              <%= f.password_field :password_confirmation, :class => 'input-xlarge' %>
            </div>
          </div>

            <legend>School Info</legend>

            <%= f.fields_for :school do |builder| %>
              <div class="control-group">
                <%= builder.label :name, :class => 'control-label' %>
                <div class="controls">
                 <%= builder.text_field :name, :class => 'input-xlarge' %>
                </div>
              </div>
              <div class="control-group">
                <%= builder.label :location, :class => 'control-label' %>
                <div class="controls">
                 <%= builder.text_field :location, :class => 'input-xlarge' %>
                </div>
              </div>
              <div class="control-group">
                <%= builder.label :time_zone, :class => 'control-label' %>
                <div class="controls">
                 <%= builder.time_zone_select :time_zone %>
                </div>
              </div>
              <div class="control-group">
                <%= builder.label :picture, :class => 'control-label' %>
                <div class="controls">
                  <%= builder.text_field :picture, :class => 'input-xlarge' %>
                </div>
              </div>
            <% end %>

          <div class="form-actions">
            <%= f.submit "Sign up", :class => 'btn btn-primary btn-large' %>
          </div>

      </fieldset>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>

</div>

