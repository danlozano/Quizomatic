<div class="container">

  <!-- Masthead
  ================================================== -->
  <header class="jumbotron subhead" id="overview">
    <div class="row">
      <div class="span7">
        <h1><%= current_student.school.name  %></h1>
        <h2>Student Access</h2> 
        <hr>
        <h3><%= current_student.name  %></h3>
        <% if !current_student.classroom.nil? %>
          <h4><%= current_student.classroom.name  %> | <%= current_student.classroom.grade  %> </h4>
        <% end %>

      </div>
      <div class="span5">
        <div class="bsa well">
          <%= image_tag "school.jpg", :class => 'img-rounded' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="span12">
        <div class="alert alert-block">
          Signed in as <strong> <%= current_student.email %></strong>. Not you?
          <%= link_to "Sign out", destroy_student_session_path, :method => :delete %>
        </div>
      </div>
    </div>

    <% if flash.any? %>
      <% flash.each do |name, msg| %>
        <div class="row">
            <div class="span12">
              <div class="alert alert-info">
                <a class="close" data-dismiss="alert">&times;</a>
                  <%= content_tag :div, msg, :id => "flash_#{name}" %>
              </div>
          </div>
        </div>
      <% end %>
    <% end %>

    <div class="subnav">
      <ul class="nav nav-pills">
        <li><%= link_to 'Home', student_dash_path %></li>
        <li><%= link_to 'Quizzes', quiz_results_path %></li>
      </ul>
    </div>

  </header>